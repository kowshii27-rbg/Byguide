generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  title        String
  slug         String   @unique
  excerpt      String
  content      String

  rating       Float
  affiliateUrl String
  imageUrl     String

  category     String   @default("tech")
}


